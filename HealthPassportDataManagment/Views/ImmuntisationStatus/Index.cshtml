@model IEnumerable<HealthPassportApi.DataModels.ImmuntisationStatus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImmuneType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tested)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertDate)

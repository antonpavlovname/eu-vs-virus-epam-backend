            <th>
                @Html.DisplayNameFor(model => model.CertExpiry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Uuid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImmuneType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tested)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertExpiry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
